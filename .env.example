# ===========================================
# Lumi Environment Variables
# ===========================================

# -----------------
# ElevenLabs
# -----------------
# Agent ID for the check-in voice agent (public - exposed to client)
NEXT_PUBLIC_ELEVENLABS_AGENT_ID=your_agent_id_here

# Optional: Separate agent IDs if using multiple agents
# ELEVENLABS_CHECKIN_AGENT_ID=your_checkin_agent_id
# ELEVENLABS_ASSISTANT_AGENT_ID=your_assistant_agent_id

# Webhook secret for verifying ElevenLabs webhook signatures
# Get this from ElevenLabs dashboard when setting up webhooks
ELEVENLABS_WEBHOOK_SECRET=your_webhook_secret

# -----------------
# Airtable
# -----------------
# Personal Access Token from https://airtable.com/create/tokens
AIRTABLE_API_KEY=patXXXXXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# AI Knowledge Base ID
AIRTABLE_BASE_ID=appnNWO7ArRjVGM2E

# LUMI CHECKIN ENTRIES table ID
AIRTABLE_TABLE_ID=tblxMiNyQqEFNIRdY

# -----------------
# Google AI (Gemini)
# -----------------
# API key from https://makersuite.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_key

# -----------------
# Langfuse (Observability)
# -----------------
# Get these from https://langfuse.com or self-host
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxx
LANGFUSE_SECRET_KEY=sk-lf-xxxxx
# Optional: Custom host for self-hosted Langfuse
# LANGFUSE_HOST=https://cloud.langfuse.com

# -----------------
# Resend (Email)
# -----------------
# API key from https://resend.com
RESEND_API_KEY=re_xxxxx
# From email address (must be verified in Resend)
RESEND_FROM_EMAIL=Lumi <lumi@aro-ha.com>

# -----------------
# Inngest (Event Processing)
# -----------------
# Get these from https://app.inngest.com/settings
# Leave blank for local development (Inngest Dev Server handles it)
INNGEST_EVENT_KEY=your_inngest_event_key
INNGEST_SIGNING_KEY=signkey-prod-xxxxx

# -----------------
# Additional Airtable Bases
# -----------------
# Master Guest CRM Base ID
AIRTABLE_MASTER_GUEST_BASE_ID=appYyHfcKqfRGpuGS

# Current Retreat Operations Base ID
AIRTABLE_CURRENT_RETREAT_BASE_ID=appa4qC7mHmhWVGd0

# -----------------
# Staff Notifications
# -----------------
# Default email for alerts (optional)
ALERT_EMAIL=alerts@aro-ha.com
URGENT_ALERT_EMAIL=manager@aro-ha.com
HIGH_ALERT_EMAIL=wellness@aro-ha.com

# -----------------
# Optional
# -----------------
# Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# App URL for links in notifications
NEXT_PUBLIC_APP_URL=https://lumi.aro-ha.com

# Make.com webhook for legacy audio upload (deprecated - use Inngest instead)
# GUEST_PROFILE_WEBHOOK_URL=https://hook.us1.make.com/xxxxx
